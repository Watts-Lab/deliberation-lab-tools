    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "render/prompt": ["./deliberation-empirica/client/src/elements/Prompt.jsx"]
