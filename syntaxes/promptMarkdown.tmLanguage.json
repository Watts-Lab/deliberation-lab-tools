{
  "name": "Prompt Markdown",
  "scopeName": "text.promptMarkdown",
  "patterns": [
    {
      "begin": "^---\\s*$",
      "end": "^---\\s*$",
      "name": "meta.frontmatter.header.promptMarkdown",
      "patterns": [
        {
          "match": "^([a-zA-Z0-9_]+)(:)",
          "captures": {
            "1": { "name": "keyword" }, 
            "2": { "name": "punctuation.separator.key-value.promptMarkdown" }
          }
        }
      ]
    },
    {
      "match": "^---\\s*$",
      "name": "entity.other.document.begin.promptMarkdown"
    },
    {
      "match": "^---\\s*$",
      "name": "entity.other.document.end.promptMarkdown"
    }
  ]
}